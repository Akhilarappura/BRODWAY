        line-height: 40px;
        border-radius: 50%;
        margin: 0 auto 10px;
    }

    .process.active p {
        background-color: #28a745;
    }

    .process h3 {
        font-size: 16px;
        color: #343a40;
    }

    /* Product list header */
    .product-name {
        background-color: #f8f9fa;
        padding: 15px 0;
        border-bottom: 2px solid #e9ecef;
        font-weight: bold;
    }

    .product-name div {
        text-align: center;
    }

    /* Product cart item */
    .product-cart {
        display: flex;
        align-items: center;
        padding: 20px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .product-cart .one-forth {
        flex: 3;
    }

    .product-cart .one-eight {
        flex: 1;
        text-align: center;
    }

    .product-cart img {
        max-width: 100px;
        margin-right: 20px;
    }

    .product-cart h3 {
        font-size: 18px;
        margin-bottom: 5px;
    }

    .original-price {
        text-decoration: line-through;
        color: #6c757d;
        font-size: 14px;
    }

    .offer-price {
        color: #28a745;
        font-weight: bold;
    }

    /* Quantity input */
    .input-group {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .input-group button {
        background-color: #e9ecef;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

    .input-group input {
        width: 50px;
        text-align: center;
        border: 1px solid #ced4da;
        margin: 0 5px;
    }

    /* Remove button */
    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

    /* Order box */
    .order-box {
        background-color: #fff;
        border: 21px solid #e9ecef;
        border-radius: 8px;
        padding: 20px;
        margin-top: 30px;
    }

    .order-box h2 {
        color: #28a745;
        margin-bottom: 20px;
    }

    .order-box .subtotal {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        font-size: 18px;
    }

    .order-box .btn-warning {
        background-color: #ffc107;
        border: none;
        color: #212529;
        padding: 10px 20px;
        font-size: 18px;
        text-transform: uppercase;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .order-box .btn-warning:hover {
        background-color: #e0a800;
    }

    /* Responsive styles */
    @media (max-width: 768px) {
        .product-name {
            display: none;
        }

        .product-cart {
            flex-direction: column;
            text-align: center;
        }

        .product-cart .one-forth,
        .product-cart .one-eight {
            width: 100%;
            margin-bottom: 15px;
        }

        .input-group {
            justify-content: center;
        }

        .order-box {
            margin-top: 30px;
        }
    }
</style>
