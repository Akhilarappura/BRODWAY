<script>
    const deleteButtons=document.querySelectorAll(".delete");
    deleteButtons.forEach(function(button){
        button.addEventListener("click",function(){
            const productId=this.getAttribute("data-id")

                // Display SweetAlert confirmation dialog
                Swal.fire({
                  title: "Are you sure?",
                  text: "Remove this item from the cart?",
                  icon: "warning",
                  showCancelButton: true,
                  confirmButtonColor: "#3085d6",
                  cancelButtonColor: "#d33",
                  confirmButtonText: "Remove!",
                }).then((result) => {
                  if (result.isConfirmed) {
                    // User confirmed deletion, send request to delete address
                    fetch(`/delete/${productId}`, {
                      method: "DELETE",
                    })
                      .then((response) => {
                        if (response.ok) {
                          // Show success message using SweetAlert
                          Swal.fire({
                            title: "Removed!",
                            text: "Product has been removed.",
                            icon: "success",
                          }).then(() => {
                            // Reload the page  
                            window.location.reload();
                          });
                        } else {
                          // Failed to delete address
                          console.error("Failed to delete address");
                          // Show error message using SweetAlert
                          Swal.fire({
                            title: "Failed!",
                            text: "Product cannot be removed.",
                            icon: "error",
                          });
                        }
                      })

                      .catch((error) => {
                        console.error("Error:", error);
                        // Show error message using SweetAlert
                        Swal.fire({
                          title: "Error!",
                          text: "An error occurred while removing the product.",
                          icon: "error",
                        });
                      });
                  }
                });
              });
            });
          </script>
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		  
          <script>
            const quantity = async (type, item) => {
                const quantityElement = document.getElementById(`quantity_${item._id}`);
                const totalPriceElement = document.getElementById(`total_price_${item._id}`);
                const subtotalElement = document.getElementById('subtotal');
                
                let quantityValue = parseInt(quantityElement.value);
                const offerPrice = parseFloat(item.productId.offerPrice);
                
                if (type === 'inc') {
                    if (quantityValue < item.productId.stock) {
                        quantityValue++;
                    } else {
                        Swal.fire({
                            title: 'Stock Exceeded!',
                            text: 'Cannot add more than available Stock',
                            icon: 'warning',
                            confirmButtonText: 'OK'
                        });
                        return;
                    }
                } else if (type === 'dec' && quantityValue > 1) {
                    quantityValue--;
                }
            
                quantityElement.value = quantityValue;
            
                const newTotalPrice = quantityValue * offerPrice;
                totalPriceElement.innerText = `₹${newTotalPrice.toFixed(2)}`;
            
                updateSubtotal();
            
                try {
                    const res = await fetch('/quantity', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ qua: quantityValue, id: item._id })
                    });
            
                    if (!res.ok) {
                        throw new Error('Failed to update quantity on server');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    // Optionally, show an error message to the user
                }
            };
            
            function updateSubtotal() {
                const totalPriceElements = document.querySelectorAll('.total-price');
                let subtotal = 0;
            
                totalPriceElements.forEach(element => {
                    const price = parseFloat(element.innerText.replace('₹', '').trim());
                    if (!isNaN(price)) {
                        subtotal += price;
                    }
                });
            
                document.getElementById('subtotal').innerText = `₹${subtotal.toFixed(2)}`;
            }
            
            // Call updateSubtotal on page load to ensure correct initial value
            document.addEventListener('DOMContentLoaded', updateSubtotal);
            </script>
    

