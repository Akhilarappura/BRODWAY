            </li>

          </ul>
          <div>
            <ul class="product-list">
              <% products.forEach(product => { %>
                <% if (product.list === 'listed' && product.category.list === 'listed') { %>
                  <li class="product-item">
                    <div class="product_details-card">
                      <div class="product_details-card-header">
                        <a href="/productdetail?id=<%= product._id %>">
                          <img src="<%= product.images[0] %>" alt="<%= product.product_name %>" class="product_details-image">
                        </a>
                        <div class="product_details-colors">
                          <a href="#"></a>
                        </div>
                      </div>
                      
                      <div class="product_details-card-body">
                        <span class="product_details-sponsored">Sponsored</span>
                        <h3 class="product_details-title"><%= product.product_name %></h3>
                  
                        <div class="product_details-rating"></div>
                        <div class="product_details-pricing">
                          <% if (product.offerPrice && product.offerPrice < product.price) { %>
                            <h4 class="product_details-offer-price">&#8377;<%= product.offerPrice %></h4>
                            <span class="product_details-original-price">M.R.P.: &#8377;<%= product.price %></span>
                            <span class="product_details-discount">(<%= Math.round(((product.price - product.offerPrice) / product.price) * 100) %>% off)</span>
                          <% } else { %>
                            <h4 class="product_details-price">&#8377;<%= product.price %></h4>
                          <% } %>
                        </div>
                        <div class="product_details-prime">
                          <span class="product_details-delivery"></span>
                        </div>
                        <% if(product.stock!=0) { %>
                          <h5 style="color: rgb(237, 40, 10);">Hurry Up!</h5>
                          <h4 class="blink-text">Only <%= product.stock %> left</h4>
                        <% } %>
                        
                        <div class="product-actions">
                          <% if (product.stock > 0) { %>
                            <a href="/cart/<%= product._id %>" class="btn btn-primary btn-add-cart">
                              <ion-icon name="cart-outline"></ion-icon> Add to Cart
                            </a>
                          <% } else { %>
                            <p class="out-of-stock">Out of Stock</p>
                          <% } %>
                          
                          <% if (wishlist && wishlist.items.some(items => items.productId.toString() === product._id.toString())) { %>
                            <a href="/wishlist" class="btn btn-secondary btn-wishlist">
                              <ion-icon name="heart"></ion-icon> In Wishlist
                            </a>
                          <% } else { %>
                            <a href="/wishlist/<%= product._id %>" class="btn btn-outline-secondary btn-wishlist">
                              <ion-icon name="heart-outline"></ion-icon> Add to Wishlist
                            </a>
                          <% } %>
                        </div>
                      </div>
                    </div>
                  </li>
                <% } %>
              <% }) %>
            </ul>
          </div>


        </div>
      </section>





