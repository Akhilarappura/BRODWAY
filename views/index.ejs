      <style>

.product_details-card {
    width: 300px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.product_details-card-header {
    position: relative;
}

.product_details-image {
    width: 100%;
    height: auto;
}

.product_details-colors {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background: rgba(255, 255, 255, 0.8);
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 0.9em;
}

.product_details-card-body {
    padding: 15px;
    text-align: center;
}

.product_details-sponsored {
    color: #888;
    font-size: 0.8em;
    margin-bottom: 5px;
}

.product_details-title {
    font-size: 1.2em;
    margin: 0;
    color: #333;
}

.product_details-description {
    font-size: 0.9em;
    color: #555;
    margin: 10px 0;
}

.product_details-rating {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px 0;
}

.product_details-stars {
    color: #f5a623;
    margin-right: 5px;
}

.product_details-reviews {
    color: #888;
    font-size: 0.9em;
}

.product_details-pricing {
    font-size: 1em;
    color: #333;
    margin: 10px 0;
}

.product_details-offer-price {
    font-size: 1.5em;
    color: #B12704;
    display: block;
}

.product_details-original-price {
    font-size: 0.9em;
    color: #888;
    text-decoration: line-through;
    display: block;
}

.product_details-discount {
    font-size: 0.9em;
    color: #B12704;
}

.product_details-prime {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    color: #555;
}

.product_details-prime-icon {
    color: #00a8e1;
    margin-right: 5px;
}

.product_details-delivery {
    font-size: 0.9em;
}

@media (max-width: 768px) {
    .product_details-card {
        width: 100%;
    }
}
      </style>

