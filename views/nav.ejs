<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BRODWAY</title>

  <link rel="shortcut icon" href="./favicon.svg" type="image/svg+xml">
  <link rel="stylesheet" href="/public/css/newIndex.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preload" href="/footwear-master/public/imgee/hero-banner.png" as="image">
</head>

<style>
  .navbar-link {
  font-size: 18px; /* Increase from 15px */
  font-weight: bold;
  padding: 10px 15px; /* Add padding */
  line-height: 1.5; /* Improve line height */
}

/* For smaller screens */
@media (max-width: 991px) {
  .navbar-link {
    font-size: 16px; /* Slightly smaller on mobile, but still larger than before */
    padding: 8px 12px; /* Adjust padding for mobile */
  }
}

/* Increase spacing between nav items */
.navbar-nav .nav-item {
  margin: 0 5px; /* Add some margin between items */
}

/* Make the navbar taller */
.navbar {
  min-height: 60px; /* Increase the minimum height */
}

/* Adjust the brand/logo size if needed */
.navbar-brand {
  font-size: 24px; /* Larger brand/logo text */
}
  .parallax {
    background-image: url("/public/imgee/hero-banner.png");
    height: 100%;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .filter-products-wrapper {
    display: flex;
    flex-direction: column;
  }

  .filter-section {
    width: 100%;
    margin-bottom: 20px;
  }

  .navbar-link {
    font-size: 15px;
    font-weight: bold;
  }

  .productsContainer {
    display: flex;
    flex-wrap: wrap;
  }

  .productsContainer .col-lg-2,
  .productsContainer .col-md-6,
  .productsContainer .col-sm-4 {
    flex: 0 1 100%;
    margin: 10px 0;
  }

  .pro-img img {
    max-width: 100%;
    height: auto;
  }

  .card-body {
    text-align: center;
  }

  .btn-add-cart a {
    color: white;
  }

  .out-of-stock-message {
    color: red;
    font-weight: bold;
    padding: 10px;
  }

  .original-price {
    color: gray;
    text-decoration: line-through;
    margin-right: 5px;
  }

  .offer-price {
    color: red;
    font-weight: bold;
  }

  .discount-percentage {
    color: green;
    font-weight: bold;
    margin-left: 5px;
  }

  .price {
    font-weight: bold;
  }

  @media (min-width: 768px) {
    .filter-products-wrapper {
      flex-direction: row;
    }

    .filter-section {
      width: 200px;
      margin-right: 20px;
    }

    .productsContainer .col-lg-2,
    .productsContainer .col-md-6,
    .productsContainer .col-sm-4 {
      flex: 0 1 calc(50% - 20px);
    }
  }

  @media (min-width: 992px) {
    .productsContainer .col-lg-2,
    .productsContainer .col-md-6,
    .productsContainer .col-sm-4 {
      flex: 0 1 calc(33.333% - 20px);
    }
  }

  @media (min-width: 1200px) {
    .productsContainer .col-lg-2,
    .productsContainer .col-md-6,
    .productsContainer .col-sm-4 {
      flex: 0 1 calc(25% - 20px);
    }
  }
  @media (max-width: 768px) {
  .btn-add-cart {
    display: block;
    width: 100%;
    margin-top: 10px;
  }
}
@media (max-width: 768px) {
  .responsive-button {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
}
</style>

<body id="top">
  <header class="header" data-header>
    <div class="container">
      <div class="overlay" data-overlay></div>
      <h1>BRODWAY</h1>

      <button class="nav-open-btn d-lg-none" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <ion-icon name="menu-outline"></ion-icon>
      </button>

      <nav class="navbar navbar-expand-lg" id="navbarNav" style="font-family: sans-serif;
      font-weight: bold;
      font-size: large;
      margin: -2rem -6rem -6rem 4rem;">
        <div class="container-fluid">
          <a class="navbar-brand d-lg-none" href="#">BRODWAY</a>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <% Category?.forEach(category => { %>
              <li class="nav-item">
                <a class="nav-link" href="/productCategory?id=<%= category._id %>">
                  <span><%= category.categoryName %></span>
                </a>
              </li>
              <% }) %>
              <li class="nav-item">
                <a class="nav-link" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact</a>
              </li>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="#" aria-label="Search">
                  <ion-icon name="search-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Search</span>
                </a>
              </li>
              <% if (!userToken) { %>
              <li class="nav-item">
                <a class="nav-link" href="/login">
                  <ion-icon name="person-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Login</span>
                </a>
              </li>
              <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/profile">
                  <ion-icon name="person-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Profile</span>
                </a>
              </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/wishlist">
                  <ion-icon name="heart-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Wishlist</span>
                </a>
              </li>
              <% if (userToken) { %>
              <li class="nav-item">
                <a class="nav-link" href="/cart">
                  <ion-icon name="cart-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Cart</span>
                  <span class="badge bg-primary"><%= cartCount %></span>
                </a>
              </li>
              <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/login">
                  <ion-icon name="cart-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Login</span>
                </a>
              </li>
              <% } %>
              <% if (userToken) { %>
              <li class="nav-item">
                <a class="nav-link" href="/userlogout">
                  <ion-icon name="log-out-outline"></ion-icon>
                  <span class="d-lg-none ms-2">Logout</span>
                </a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </header>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

