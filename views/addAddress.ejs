<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://allyoucan.cloud/cdn/icofont/1.0.1/icofont.css" integrity="sha384-jbCTJB16Q17718YM9U22iJkhuGbS0Gd2LjaWb4YJEZToOPmnKDjySVa323U+W7Fv" crossorigin="anonymous">
    <style>
        /* Custom styling for the form */
        .control-group {
            margin-bottom: 20px;
        }
        .control-label {
            font-weight: bold;
        }
        .input-xlarge {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }
        .input-xlarge:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        .help-block {
            color: #6c757d;
            font-size: 14px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="osahan-account-page-left shadow-sm bg-white h-100">
                <div class="border-bottom p-4">
                    <div class="osahan-user text-center">
                        <div class="osahan-user-media">
                            <img class="mb-3 rounded-pill shadow-sm mt-1" src="" alt="gurdeep singh osahan">
                            <div class="osahan-us"><h6><%=userdetail.name%></h6>
                                <p class="mb-1"></p>
                                <p><%=userdetail.email%></p>
                                <p class="mb-0 text-black font-weight-bold"><a class="text-primary mr-3" data-toggle="modal" data-target="#edit-profile-modal" href="#"><i class="icofont-ui-edit"></i></a></p>
                            </div>
                        </div>
                    </div>
                </div>
                <ul class="nav nav-tabs flex-column border-0 pt-4 pl-4 pb-4" id="myTab" role="tablist">
                    <li class="nav-item">
                        <form  action="/addAddress" method="post">
                            <button type="submit" class="btn btn-success">SAVE</button>
                      
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="osahan-account-page-right shadow-sm bg-white p-4 h-100">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="addresses" role="tabpanel" aria-labelledby="addresses-tab">
                        <h4 class="font-weight-bold mt-0 mb-4">Manage Addresses</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <form>
                                    <fieldset>
                                        <!-- Address form -->
                                        <h2>Address</h2>
                                        <!-- full-name input-->
                                        <div class="control-group">
                                            <label class="control-label">Full Name</label>
                                            <div class="controls">
                                                <input id="full-name" name="name" type="text" placeholder="full name" class="input-xlarge">
                                                <span id="nameValidation" style="color: red"></span>
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                        <!-- address-line1 input-->
                                        <div class="control-group">
                                            <label class="control-label">Address </label>
                                            <div class="controls">
                                                <input id="address-line1" name="address" type="text" placeholder="address line 1" class="input-xlarge" required>
                                                <p class="help-block">Street address, P.O. box, company name, c/o</p>
                                                <span id="addressValidation" style="color: red"></span>
                                            </div>
                                        </div>
                                        <!-- address-line2 input-->
                                        <div class="control-group">
                                            <label class="control-label">Mobile No:</label>
                                            <div class="controls">
                                                <input id="mobile" name="mobile" type="number" placeholder="mobile number " class="input-xlarge">
                                                <p class="help-block">Apartment, suite, unit, building, floor, etc.</p>
                                                <span id="mobileValidation" style="color: red"></span>
                                            </div>
                                        </div>
                                        <!-- city input-->
                                        <div class="control-group">
                                            <label class="control-label">District</label>
                                            <div class="controls">
                                                <input id="district" name="district" type="text" placeholder="district" class="input-xlarge">
                                                <p class="help-block"></p>
                                                <span id="districtValidation" style="color: red"></span>
                                            </div>
                                        </div>
                                        <!-- region input-->
                                        <div class="control-group">
                                            <label class="control-label">Locality</label>
                                            <div class="controls">
                                                <input id="region" name="locality" type="text" placeholder="state / province / region" class="input-xlarge">
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                        <!-- postal-code input-->
                                        <div class="control-group">
                                            <label class="control-label">Pincode</label>
                                            <div class="controls">
                                                <input id="pincode" name="pincode" type="text" placeholder="zip or postal code" class="input-xlarge">
                                                <p class="help-block"></p>
                                                <span id="pincodeValidation" style="color: red"></span>
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">State</label>
                                            <div class="controls">
                                                <input id="state" name="state" type="text" placeholder="State" class="input-xlarge">
                                                <p class="help-block"></p>
                                                <span id="stateValidation" style="color: red"></span>
                                            </div>
                                        </div>
                                        <!-- country select -->
                                        <div class="control-group">
                                            <label class="control-label">Country</label>
                                            <div class="controls">
                                                <select id="country" name="country" class="input-xlarge">
                                                    <option value="" selected="selected">(please select a country)</option>
                                                    <option value="AF">india</option>
                                                    <option value="AL"></option>
                                                    <option value="DZ"></option>
                                                </select>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function validateForm() {
      let isValid = true; // Assume form is valid until proven otherwise
  
      // Reset error messages
      document.getElementById('nameValidation').textContent = "";
      document.getElementById('mobileValidation').textContent = "";
      document.getElementById('addressValidation').textContent = "";
      document.getElementById('districtValidation').textContent = "";
      document.getElementById('stateValidation').textContent = "";
      document.getElementById('pincodeValidation').textContent = "";
  
      const name = document.getElementById('name').value.trim();
      const mobile = document.getElementById('mobile').value.trim().replace(/\s/g, '');
      const address = document.getElementById('address').value.trim();
      const district = document.getElementById('district').value.trim();
      const state = document.getElementById('state').value.trim();
      const pincode = document.getElementById('pincode').value.trim().replace(/\s/g, '');
  
      // Name validation
      if (name === "") {
        document.getElementById('nameValidation').textContent = "Name cannot be empty.";
        isValid = false;
      } else if (!/^[a-zA-Z\s]*$/.test(name)) {
        document.getElementById('nameValidation').textContent = 'Name cannot contain symbols or numbers';
        isValid = false;
      }
  
      // Mobile number validation
      if (mobile === "" || !/^\d{10}$/.test(mobile)) {
        document.getElementById('mobileValidation').textContent = "Mobile number must be 10 digits.";
        isValid = false;
      }
  
      // Address line validation
      if (address === "") {
        document.getElementById('addressValidation').textContent = "Address cannot be empty.";
        isValid = false;
      }
  
      // District validation
      if (district === "") {
        document.getElementById('districtValidation').textContent = "District cannot be empty.";
        isValid = false;
      } else if (!/^[a-zA-Z\s]*$/.test(district)) {
        document.getElementById('districtValidation').textContent = 'District cannot contain symbols or numbers';
        isValid = false;
      }
  
      // State validation
      if (state === "") {
        document.getElementById('stateValidation').textContent = "State cannot be empty.";
        isValid = false;
      } else if (!/^[a-zA-Z\s]*$/.test(state)) {
        document.getElementById('stateValidation').textContent = 'State cannot contain symbols or numbers';
        isValid = false;
      }
  
      // Pincode validation
      if (pincode === "" || !/^\d{6}$/.test(pincode)) {
        document.getElementById('pincodeValidation').textContent = "PinCode must be 6 digits.";
        isValid = false;
      }
  
      return isValid;
    }
  
    function validateNumber(inputFieldId, errorMessageId) {
      const inputField = document.getElementById(inputFieldId);
      const errorMessageElement = document.getElementById(errorMessageId);
  
      // Clear any existing error message
      errorMessageElement.textContent = '';
  
      // Check if the input is numeric
      if (/^\D$/.test(inputField.value)) {
        errorMessageElement.textContent = 'Please enter a valid number.';
      }
    }
  
    // Attach event listeners to mobile and pincode fields
    document.getElementById('mobile').addEventListener('input', function () {
      validateNumber('mobile', 'mobileValidation');
    });
  
    document.getElementById('pincode').addEventListener('input', function () {
      validateNumber('pincode', 'pincodeValidation');
    });
  
    document.getElementById('addressForm').addEventListener('submit', function (event) {
      event.preventDefault(); // Prevent form submission
      if (validateForm()) {
        this.submit();
      }
    });
  </script>
  



<script src='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js'></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
