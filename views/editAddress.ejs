<%-include('include/profileHeader')-%> 
          <div class="col-md-7 bg-white rounded shadow p-5">
            <form action="/editAddress/<%=address.id%>" method="post" onsubmit="return validate()">
                <fieldset>
                    <!-- Address form -->
                    <h2> Edit Address</h2>
                    <!-- full-name input-->
                    <div class="control-group">
                        <label class="control-label">Full Name</label>
                        <div class="controls">
                            <input id="name" name="name" value="<%= address._id.name %>" type="text" placeholder="full name" class="input-xlarge" required>
                            <p id="nameError" class="help-block"></p>
                        </div>
                    </div>
                    <!-- address-line1 input-->
                    <div class="control-group">
                        <label class="control-label">Address </label>
                        <div class="controls">
                            <input id="address" name="address" value="<%= address.address %>" type="text" placeholder="address line 1" class="input-xlarge" required>
                            <p id="AddressError" class="help-block"></p>
                        </div>
                    </div>
                    <!-- address-line2 input-->
                    <div class="control-group">
                        <label class="control-label">Mobile No:</label>
                        <div class="controls">
                            <input id="mobileNo" name="mobileNumber" value="<%=address.mobileNumber%>" type="number" placeholder="mobile number " class="input-xlarge" required>
                            <p id="MobileNumberError" class="help-block">Apartment, suite, unit, building, floor, etc.</p>
                        </div>
                    </div>
                    <!-- city input-->
                    <div class="control-group">
                        <label class="control-label">District</label>
                        <div class="controls">
                            <input id="District" name="district" value="<%=address.district%>" type="text" placeholder="district" class="input-xlarge" required>
                            <p id="DistrictError" class="help-block"></p>
                        </div>
                    </div>
                    <!-- region input-->
                    <div class="control-group">
                        <label class="control-label">Locality</label>
                        <div class="controls">
                            <input id="locality" name="locality" value="<%=address.locality%>" type="text" placeholder="state / province / region" class="input-xlarge" required>
                            <p id="localityError" class="help-block"></p>
                        </div>
                    </div>
                    <!-- postal-code input-->
                    <div class="control-group">
                        <label class="control-label">Pincode</label>
                        <div class="controls">
                            <input id="pincode" name="pincode" value="<%=address.pincode%>" type="text" placeholder="zip or postal code" class="input-xlarge" required>
                            <p id="pincodeError" class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">State</label>
                        <div class="controls">
                            <input id="Statecode" name="state" value="<%=address.state%>" type="text" placeholder="State" class="input-xlarge" required>
                            <p id="stateError" class="help-block"></p>
                        </div>
                    </div>
                    <!-- country select -->
                    <div class="control-group">
                        <label class="control-label">Country</label>
                        <div class="controls">
                            <select id="country" name="country" class="input-xlarge">
                                <option value="" selected="selected">(please select a country)</option>
                                <option value="AF">India</option>
                                <option value="AL">Albania</option>
                                <option value="DZ">Algeria</option>
                            </select>
                            <button type="submit" class="btn btn-success">SAVE</button>
                        </div>
                    </div>
                </fieldset>
            </form>
          </div>
          </div>
          </div>
          </section>
  </div>
  <script>
    function validate(){
        document.getElementById('nameError').textContent='';
        document.getElementById('AddressError').textContent='';
        document.getElementById('MobileNumberError').textContent='';
        document.getElementById('DistrictError').textContent='';
        document.getElementById('localityError').textContent='';
        document.getElementById('pincodeError').textContent='';
        document.getElementById('stateError').textContent='';

        var name=document.getElementById('name').value.trim();
        var Address=document.getElementById('address').value.trim();
        var MobileNo=document.getElementById('mobileNo').value.trim();
        var District=document.getElementById('District').value.trim();
        var Locality=document.getElementById('locality').value.trim();
        var pincode=document.getElementById('pincode').value.trim();
        var state=document.getElementById('statecode').value.trim();


        if(name===""){
            document.getElementById('nameError').textContent='Name cannot be empty';
            return false;
        }
        if(name.length<4){
            document.getElementById('nameError').textContent='Name must contain at least 4 characters';
            return false
        }
        if(!/^[a-zA-Z]+$/.test(name)){
            document.getElementById('nameError').textContent='Name cannot contain symbols or numbers';
            return false
        }
        if(address===""){
            document.getElementById('AddressError').textContent='Address cannot be empty';
            return false
        }
        if(address<3){
            document.getElementById('AddressError').textContent='Address contains more than this';
            return false
        }
        if(mobileNo===""){
            document.getElementById('MobileNumberError').textContent='Mobile Number cannot be empty';
            return false
        }
        if(mobileNo<10){
            document.getElementById('MobileNumberError').textContent='Mobile Number contain only 10 digits';
            return false
        }
        if(mobileNo>10){
            document.getElementById('MobileNumberError').textContent='Mobile Number contain only 10 digits';
            return false
        }
        if(District===""){
            document.getElementById('DistrictError').textContent='Disctrict cannot be empty';
            return false
        }
        if(Locality===""){
            document.getElementById('localityError').textContent='Locality cannot be empty';
            return false
        }
        if(pincode===""){
            document.getElementById('pincodeError').textContent='Pincode cannot be empty';
            return false
        }
        if(pincode<6){
            document.getElementById('pincodeError').textContent='pincode contain only 6 digits'
            return false
        }
        if(pincode>6){
            document.getElementById('pincodeError').textContent='pincode contain  6 digits'
            return false
        }
        if(state===""){
            document.getElementById('stateError').textContent='State cannot be empty'
        }
        return true
    }

</script>


</div>
