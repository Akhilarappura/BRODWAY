
<%-include('header')-%> 


<div class="text-center align-items-center " id="login">
<div class="container top-50 mt-5   w-25 border py-5 shadow mt-[121px] pt-16 ">
<div class="title pb-10">
<h2 class="font-weight-bold  text-white">Login</h2>
<div class="title pb-5 text-white">
    <small> Don't have an Account <a href="/signup" class="btn btn-outlined-white">SIGNUP</a></small>
</div>


</div>
<script>
    function validate() {

     document.getElementById('emailError').textContent="";
     document.getElementById('passwordError').textContent="";
    
 
 

     var email = document.getElementById('email').value.trim();
     var password = document.getElementById('password').value.trim();

 
 
 
 
 
     if (email === "") {
        
        document.getElementById('emailError').textContent="Email cannot be empty";
        return false;
    }
    if (!/^\S+@\S+\.\S+$/.test(email)) {
                document.getElementById("emailError").textContent = "Email should be in specific format..!";
                return false
            }
 
     
     if (password === "") {
         document.getElementById('passwordError').textContent="password cannot be empty";
         return false;
     }
     
     
     if (!/(?=.[a-zA-Z])(?=.\d)(?=.[@$!%?&])[A-Za-z\d@$!%?&]+$/.test(password)) {
     document.getElementById('passworError').textContent = 'Password must be a combination of letters, digits, and symbols';
     return false;
 }
    
     
     return true;
 }
 
 
     
 </script>
 


<form action="/login" method= "post" class="pt-3" name="formlogin" onsubmit="return validate" >
<div class="form-group">
 <p style="background-color: rgb(255, 0, 0); color: white;">   <%=message %></p>
<input type="email" class= "form-control" placeholder="email" name="email" id="email"  required>
<span id="emailError" class="error" style="color:red"></span>

<!-- <small class="form-text text-muted text-left"></small> -->
</div>
<div></div>
