    body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .product-card {
    transition: all 0.3s ease;
    border: none;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
  }

  .product-title a {
    text-decoration: none;
    color: #212121;
    font-weight: 500;
    font-size: 14px;
    line-height: 1.4;
  }

  .product-title a:hover {
    color: #2874f0;
  }

  .product-brand {
    font-size: 14px;
    color: #878787;
    margin-bottom: 8px;
  }

  .pro-img {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .pro-img img {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }

  .price-container {
    font-size: 16px;
  }

  .offer-price {
    color: #212121;
    font-weight: 500;
  }

  .original-price {
    color: #878787;
    margin-right: 8px;
  }

  .discount-percentage {
    color: #388e3c;
    font-weight: 500;
  }

  .btn-add-cart {
    background-color: #ff9f00;
    border-color: #ff9f00;
  }

  .btn-add-cart:hover {
    background-color: #f39700;
    border-color: #f39700;
  }

  .out-of-stock {
    font-size: 14px;
    font-weight: 500;
  }
